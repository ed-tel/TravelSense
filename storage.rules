rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /profileImages/{userId} {
      // âœ… Allow only authenticated user to read/write their own image
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Optional: block everything else (recommended for production)
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
